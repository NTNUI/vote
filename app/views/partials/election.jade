.center.text-center(ng-switch='!!activeElection')
    div(ng-switch-when='true')
        .election-info
            h2 {{activeElection.title}}
            p {{activeElection.description}}

        .alternatives
            h3 Alternativer
            ul.list-unstyled(ng-repeat='alternative in activeElection.alternatives')
                li(ng-click='selectAlternative(alternative)', ng-class='{"selected": isChosen(alternative)}')
                    p {{alternative.description}}

            confirm-vote(vote-handler='vote()', selected-alternative='selectedAlternative')


    div(ng-switch-default)
        h2 {{voteFeedback || 'Ingen aktive avstemninger.'}}

