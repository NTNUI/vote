.election
    max-width 750px
    margin 0 auto
    font-size 21px

.election-info
    margin-bottom 40px

.alternatives
    border-top 1px solid lighten($font-gray, 50%)
    padding-top 40px

    h3
        margin-bottom 25px

    button
        color $font-gray
        margin-top 30px
        min-width 30%
        transition all 0.4s

        &:focus
            outline none

        &:hover
            color darken($font-gray, 30%)

    ul li
        line-height 60px
        border-radius 2px
        border 1px solid transparent
        background-color alpha($alternative-background, 0.4)
        transition all 0.5s

        &.selected
            background-color alpha($alternative-background, 0.1)

        p
            margin-bottom 0
            color $alternative-color
            transition all 0.3s
            vertical-align middle

        &:hover
            cursor pointer
            border 1px solid lighten($font-gray, 50%)
            background-color alpha($alternative-background, 0.05)
            p
                color darken($alternative-color, 50%)
                opacity 1

@media (max-width 1000px)
    .alternatives
        button
            min-width 60%

        ul li
            border 1px solid lighten($font-gray, 50%)
            background-color alpha($alternative-background, 0.05)

            p
                color darken($alternative-color, 40%)
                opacity 1
