{
  "name": "vote-client",
  "version": "1.0.0",
  "description": "Vote app with support for card reader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "Vote",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "zip"
    },
    "linux": {
      "category": "Utility",
      "target": "zip"
    },
    "win": {
      "target": "zip",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com/webkom/vote",
  "author": "Abakus",
  "license": "MIT",
  "dependencies": {
    "serialport": "^6.0.4"
  },
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.54.0",
    "electron-rebuild": "^1.6.1",
    "prettier": "^1.10.2"
  }
}
